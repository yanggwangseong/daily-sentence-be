{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
        "^@APP/(.*)$": "<rootDir>/../src/$1",
        "^@TEST/(.*)$": "<rootDir>/../src/test/$1"
    }
}
